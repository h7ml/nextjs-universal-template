{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "lib": [
      "deno.ns",
      "deno.unstable",
      "dom",
      "dom.iterable",
      "esnext",
      "es2022"
    ],
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "imports": {
    "react": "https://esm.sh/react@18.3.1",
    "react-dom": "https://esm.sh/react-dom@18.3.1",
    "react-dom/server": "https://esm.sh/react-dom@18.3.1/server",
    "@trpc/server": "https://esm.sh/@trpc/server@11.6.0",
    "@trpc/client": "https://esm.sh/@trpc/client@11.6.0",
    "@trpc/react-query": "https://esm.sh/@trpc/react-query@11.6.0",
    "@tanstack/react-query": "https://esm.sh/@tanstack/react-query@5.90.2",
    "drizzle-orm": "https://esm.sh/drizzle-orm@0.44.5",
    "@neondatabase/serverless": "https://esm.sh/@neondatabase/serverless@1.0.2",
    "jose": "https://esm.sh/jose@6.1.0",
    "zod": "https://esm.sh/zod@3.23.8",
    "superjson": "https://esm.sh/superjson@1.13.3",
    "clsx": "https://esm.sh/clsx@2.1.1",
    "tailwind-merge": "https://esm.sh/tailwind-merge@3.3.1",
    "nanoid": "https://esm.sh/nanoid@5.1.5",
    "date-fns": "https://esm.sh/date-fns@4.1.0",
    "@/": "./src/",
    "@": "./src/"
  },
  "tasks": {
    "dev": "deno run --allow-all --watch deno_server.ts",
    "start": "deno run --allow-all deno_server.ts",
    "check": "deno check deno_server.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "test": "deno test --allow-all",
    "test:coverage": "deno test --allow-all --coverage=cov_profile",
    "cache": "deno cache --reload deno_server.ts src/**/*.ts"
  },
  "fmt": {
    "files": {
      "include": ["deno_server.ts", "src/**/*.ts", "src/**/*.tsx"],
      "exclude": ["node_modules", ".next", ".turbo", "dist", "build"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "semiColons": true,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "files": {
      "include": ["deno_server.ts", "src/**/*.ts", "src/**/*.tsx"],
      "exclude": ["node_modules", ".next", ".turbo", "dist", "build"]
    },
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-unused-vars"]
    }
  },
  "test": {
    "files": {
      "include": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*_test.ts",
        "**/*_test.tsx"
      ],
      "exclude": ["node_modules", ".next"]
    }
  },
  "nodeModulesDir": false,
  "lock": false,
  "unstable": [
    "kv",
    "broadcast-channel",
    "cron",
    "kv-oauth",
    "html-rewriter",
    "npm",
    "unsafe-proto"
  ]
}
